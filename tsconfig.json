{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    },

    "types": ["jest","node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["app", "types", "test"],
  "exclude": ["node_modules", "platforms"]
}
